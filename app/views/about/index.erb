<div class="about container--min content--narrow">
  <%= render "section", heading: "EBABZ #{@fest.year}" do %>
    <%= render "fest_info", fest: @fest %>
  <% end %>

  <% if @faqs.any? %>
    <%= render "section", heading: "Frequenty Asked Questions" do %>
      <% @faqs.each do |faq| %>
        <div>
          <p><%= faq.question %></p>
          <p><%= faq.answer %></p>
        </div>
      <% end %>
    <% end %>
  <% end %>

  <% if @general_info.safe_space_policy.present? %>
    <%= render "section", heading: "Safe Space Policy" do %>
      <%= @general_info.safe_space_policy %>
    <% end %>
  <% end %>
</div>
